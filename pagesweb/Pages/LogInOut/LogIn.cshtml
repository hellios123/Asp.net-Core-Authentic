@page
@model pagesweb.Pages.LogInOut.LogInModel
@{
    ViewData["Title"] = "LogIn";
}

<h2>LogIn</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <input asp-for="login.MobileOrEmail" type="text" placeholder="EmailOrNumber" />
                <span asp-validation-for="login.MobileOrEmail" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <input asp-for="login.Password" type="password" placeholder="Password" />
                </div>
                <input type="submit" value="LOGIN" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        </form>
        </div>
    </div>

